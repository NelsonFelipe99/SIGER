<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment" >



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="306dp"
            android:layout_height="182dp"
            android:src="@drawable/logosiger" />

        <TextView
            android:id="@+id/text_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:gravity="center"
            android:textAlignment="center"
            android:textSize="24sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <Button
                        android:id="@+id/btn_reserva"
                        android:layout_width="195dp"
                        android:layout_height="122dp"
                        android:drawableTop="@drawable/reserva"
                        android:text="Reservar" />

                    <Space
                        android:layout_width="11dp"
                        android:layout_height="wrap_content" />

                    <Button
                        android:id="@+id/btn_platos"
                        android:layout_width="195dp"
                        android:layout_height="122dp"
                        android:drawableTop="@drawable/comida__1_"
                        android:text="Platos" />

                </TableRow>

            </TableLayout>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="129dp"
                    android:gravity="center">

                    <Button
                        android:id="@+id/btn_bebidas"
                        android:layout_width="195dp"
                        android:layout_height="122dp"
                        android:drawableTop="@drawable/menu_del_restaurante"
                        android:text="Bebidas" />

                    <Space
                        android:layout_width="11dp"
                        android:layout_height="wrap_content" />

                    <Button
                        android:id="@+id/btn_contacto"
                        android:layout_width="195dp"
                        android:layout_height="122dp"
                        android:drawableTop="@drawable/comunicar"
                        android:text="CONTACTAR" />

                </TableRow>

            </TableLayout>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <Button
                        android:id="@+id/btn_pagar"
                        android:layout_width="195dp"
                        android:layout_height="122dp"
                        android:drawableTop="@drawable/tarjeta_de_credito"
                        android:text="PAGAR" />
                </TableRow>

            </TableLayout>
        </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>